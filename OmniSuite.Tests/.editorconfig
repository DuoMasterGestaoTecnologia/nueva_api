root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[*.cs]
indent_style = space
indent_size = 4

# Naming conventions
dotnet_naming_rule.private_members_with_underscore_must_be_prefixed_with_underscore.severity = warning
dotnet_naming_rule.private_members_with_underscore_must_be_prefixed_with_underscore.symbols = private_fields
dotnet_naming_rule.private_members_with_underscore_must_be_prefixed_with_underscore.style = prefix_underscore_with_underscore

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private
dotnet_naming_symbols.private_fields.required_modifiers = 

dotnet_naming_style.prefix_underscore_with_underscore.required_prefix = _
dotnet_naming_style.prefix_underscore_with_underscore.required_suffix = 
dotnet_naming_style.prefix_underscore_with_underscore.word_separator = 
dotnet_naming_style.prefix_underscore_with_underscore.capitalization = camel_case
